<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>Đăng ký</title>
    <link rel="stylesheet" href="/assets/bootstrap-4.1.3/css/bootstrap.min.css">
    <script src="/assets/jquery-3.3.1/jquery.min.js"></script>
    <script src="/assets/bootstrap-4.1.3/js/bootstrap.min.js"></script>
    <script src="/assets/js/registrasion.js"></script>
    <link rel="stylesheet" href="/assets/css/registration.css">
</head>

<body>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <header class="card-header">
                    <a href="/user/login" class="float-right btn btn-outline-primary mt-1">Đăng nhập</a>
                    <h4 class="card-title mt-2">Đăng ký</h4>
                </header>
                {{# if hasError }}
                    <div class="alert alert-danger" role="alert">
                        {{# each messages }}
                            {{this}}</br>
                        {{/each}}
                    </div>
                {{ else }}
                    {{# if isSuccess }}
                        <div class="alert alert-success" role="alert">
                            {{# each success }}
                                {{this}}</br>
                            {{/ each }}
                        </div>
                    {{/ if }}
                {{/ if }}
                <article class="card-body">
                    <form action="/user/register" method="POST" onsubmit="return validateAddUserForm();">
                        <div class="form-group">
                            <label for="name">Tài khoản</label>   
                            <input id="account" name="account" type="text" class="form-control" placeholder="" autofocus required>
                        </div> <!-- form-group end.// -->
                        <div class="form-group">
                            <label for="name">Họ và tên</label>   
                            <input id="name" name="name" type="text" class="form-control" placeholder="" required>
                        </div> <!-- form-group end.// -->
                        <div class="form-group">
                            <label for="txtPhone">Số điện thoại</label>   
                            <input id="txtPhone" type="text" class="form-control" placeholder="" onkeypress="return isNumerKey(event)" required>
                        </div> <!-- form-group end.// -->
                        <div class="form-group">
                            <label>Ngày sinh</label><br/>  
                            <div class="row">
                                <div class="col-md-3 col-sm-3">
                                    <select class="form-control" name="day" id="date"></select>
                                </div>
                                <div class="col-md-4 col-sm-4">
                                    <select class="form-control" name="month" id="month"></select>
                                </div>
                                <div class="col-md-5 col-sm-5">
                                    <select class="form-control" name="year" id="year"></select>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="email">Địa chỉ email</label>
                            <input id="email" type="email" name="email" class="form-control" placeholder="" required>
                            <small class="form-text text-muted">Chúng tôi sẽ không tiết lộ email của bạn cho người khác.</small>
                        </div> <!-- form-group end.// -->
                        <div class="form-group">
                                <label class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="gender" value="true" checked>
                            <span class="form-check-label"> Nam </span>
                            </label>
                            <label class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="gender" value="false">
                            <span class="form-check-label"> Nữ</span>
                            </label>
                        </div> <!-- form-group end.// -->
                        <div class="form-group">
                            <label for="newPassword">Mật khẩu</label>
                            <input id="newPassword" name="password" class="form-control" type="password" required>
                        </div> <!-- form-group end.// -->  
                        <div class="form-group">
                            <label for="retype">Nhập lại mật khẩu</label>
                            <input id="retype" class="form-control" type="password" required>
                        </div> <!-- form-group end.// -->  
                        <input type="text" id="_csrf" name="_csrf" value="{{csrfToken}}" hidden>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block"> Đăng ký  </button>
                        </div> <!-- form-group// -->                                     
                    </form>
                </article> <!-- card-body end .// -->
                <div class="border-top card-body text-center">Bạn đã có tài khoản? <a href="/user/login">Đăng nhập</a></div>
            </div> <!-- card.// -->
        </div> <!-- col.//-->
    </div> <!-- row.//-->
    <script type="text/javascript">
        loadDays();           
        loadMonths();  
        loadYears();   
    </script>
    <script src="/assets/js/manager-user.js"></script>
</body>
</html>