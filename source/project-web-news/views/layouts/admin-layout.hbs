<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Responsive sidebar template with sliding effect and dropdown menu based on bootstrap 3">
    <title>{{title}}</title>
    <script src="/assets/jquery-3.3.1/jquery.min.js"></script>
    <script src="/assets/js/admin.js"></script>
    <link rel="stylesheet" href="/assets/bootstrap-4.1.3/css/bootstrap.min.css">
    <link href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet">
    <link rel="stylesheet" href="/assets/css/writer.css">
</head>

<body>

    <div class="page-wrapper chiller-theme toggled">
        <a id="show-sidebar" class="btn btn-sm btn-dark" href="#">
            <i class="fas fa-bars"></i>
        </a>
        <nav id="sidebar" class="sidebar-wrapper">
            <div class="sidebar-content">
            <div class="sidebar-brand">
                <a href="#">Sidemenu</a>
                <div id="close-sidebar">
                <i class="fas fa-times"></i>
                </div>
            </div>
            <div class="sidebar-header">
                <div class="user-pic">
                    <img class="img-fluid rounded" src="{{avatar}}"
                        id="avatar-sidebar" alt="User picture">
                </div>
                <div class="user-info">
                <span class="user-name">
                    {{userName}}
                </span>
                <span class="user-role">Quản trị viên</span>
                <span class="user-status">
                    <i class="fa fa-circle"></i>
                    <span>Online</span>
                </span>
                </div>
            </div>
            <!-- sidebar-header  -->
            <div class="sidebar-search">
                <div>
                <div class="input-group">
                    <input type="text" class="form-control search-menu" placeholder="Tìm kiếm...">
                    <div class="input-group-append">
                    <span class="input-group-text">
                        <i class="fa fa-search" aria-hidden="true"></i>
                    </span>
                    </div>
                </div>
                </div>
            </div>
            <!-- sidebar-search  -->
            <div class="sidebar-menu">
                <ul>
                    <li class="header-menu">
                        <span>Chức năng</span>
                    </li>
                    <li>
                        <a href="/user/admin/manager-category">
                            <i class="fa fa-folder"></i>
                            <span>Quản lý chuyên mục</span>
                        </a>

                    </li>
                    <li>
                        <a href="/user/admin/manager-tag">
                            <i class="fa fa-book"></i>
                            <span>Quản lý nhãn tag</span>
                        </a>
                    </li>
                    <li class="sidebar-dropdown">
                    <a href="script:">
                        <i class="fas fa-paste"></i>
                        <span>Quản lý bài viết</span>
                        <!--<span class="badge badge-pill badge-warning">New</span>-->
                    </a>
                    <div class="sidebar-submenu">
                        <ul>
                        <li>
                            <a href="/user/admin">Danh sách bài viết
                            <!--<span class="badge badge-pill badge-success">Pro</span>-->
                            </a>
                        </li>
                        <li>
                            <a href="/user/admin/confirm-posts">Bài viết chờ duyệt</a>
                        </li>
                        </ul>
                    </div>
                    </li>           
                    <li>
                        <a href="/user/admin/manager-user">
                            <i class="fas fa-users"></i>
                            <span>Quản lý người dùng</span>
                        </a>
                    </li>
                </ul>
            </div>
            <!-- sidebar-menu  -->
            </div>
            <!-- sidebar-content  -->
            <div class="sidebar-footer">
                <a href="/user/profile">
                    <i class="fa fa-cog"> Cài đặt</i>
                </a>
                <a href="/user/logout">
                    <i class="fa fa-power-off"> Đăng xuất</i>
                </a>
            </div>
        </nav>
        <!-- sidebar-wrapper  -->
        <main class="page-content">
            {{{body}}}
        </main>
        <!-- page-content" -->
    </div>
    <!-- page-wrapper -->

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
        crossorigin="anonymous"></script>
    <script src="/assets/bootstrap-4.1.3/js/bootstrap.min.js"></script>
    <script src="/assets/js/writer.js"></script>

</body>
</html>