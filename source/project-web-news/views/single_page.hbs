          </section>


          <h2 class="page-header" for="name">Đăng tải bình luận</h2>
          <div class="contact-form-area">
            <form action="/single-page/{{article._id}}" method="POST">
              <div class="row">
                <div class="col-12 col-lg-6">
                  <input type="text" class="comment-form form-control input-md" id="name" name="name"
                    placeholder="Họ tên*" required="">
                </div>
                <div class="col-12 col-lg-6">
                  <input type="email" class="comment-form form-control input-md" id="email" name="email"
                    placeholder="Email">
                </div>
                <div class="col-lg-12">
                  <textarea name="message" class="comment-form form-control" id="message" cols="20" rows="10"
                    placeholder="Viết bình luận..." required=""></textarea>
                </div>

                <div class="col-lg-12 mb-30 text-align-r">
                  <button class="btn btn-info" type="submit">Gửi bình luận</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <nav class="nav-slit"> <a class="prev" href="#"> <span class="icon-wrap"><i class="fa fa-angle-left"></i></span>
        <div>
          <h3>City Lights</h3>
          <img src="/images/post_img1.jpg" alt="" />
