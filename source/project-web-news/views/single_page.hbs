<section id="contentSection">
  <ol class="breadcrumb">
    <li><a href="/"><i class="fa fa-home"></i></a></li>
    <li><a href="/list-articles/categorymain/{{article.categoryMain._id}}">{{article.categoryMain.categoryName}}</a>
    </li>
    <li><a href="/list-articles/category/{{article.categorySub._id}}">{{article.categorySub.categoryName}}</a></li>
    <li class="active">{{article.title}}</li>
  </ol>
  <div class="single-big-img img-ovarlay" style="background-image: url({{article.bigAvatar}})">

  </div>
  <div class="row">
    <div class="col-lg-8 col-md-8 col-sm-8">
      <div class="left_content">
        <div class="single_page">

          <h1>{{article.title}}</h1>

          {{#if article.isPremiumArticle}}

          {{#if isReaded }}
          <div class="post_commentbox"> <a href="javascript:;"><i
                class="fa fa-user"></i>{{article.writer.pseudonym}}</a> <span><i
                class="fa fa-calendar"></i>{{formatDate article.writeDate day="numeric" month="long" year="numeric"}}</span>
            <a href="#idcomment"><i class="far fa-comment-alt"></i>{{article.comments.length}}</a> </div>
          <div class="single_page_content">
            {{{article.content}}}
            <div class="mt-30">
              <i class="material-icons" id="icon-center">label</i>
              {{#each article.arrayOfTags}}
              <a href="/list-articles/tag/{{_id}}" class="badge badge-dark">#{{tagName}}</a>
              {{/each}}
            </div>
          </div>
          {{else}}
          <div class="subscription-popup">

            <div class="popup-content">
              <p class="popup-content-title">Nội dung chỉ dành riêng cho thành viên.</p>
              <p>Hãy trở thành thành viên để được đọc nhiều bài viết hơn.</p>
              <div class="text-center"><a href="/user/register" class="btn btn-primary">Trở thành thành viên</a></div>
              <div class="d-flex popup-content-hyperlink">
                <div class="col-6"></div>
                <div class="col-6 text-right">
                  Nhấp vào <a href="/user/login"><span style="color:red ">đây</span></a> để đăng nhập
                </div>
              </div>
            </div>
          </div>
          {{/if}}
          {{else}}
          <div class="post_commentbox"> <a href="javascript:;"><i
                class="fa fa-user"></i>{{article.writer.pseudonym}}</a> <span><i
                class="fa fa-calendar"></i>{{formatDate article.writeDate day="numeric" month="long" year="numeric"}}</span>
            <a href="#idcomment"><i class="far fa-comment-alt"></i>{{article.comments.length}}</a> </div>
          <div class="single_page_content">
            {{!-- <img class="img-center" src="{{article.bigAvatar}}" alt="{{article.title}}"> --}}

            {{!-- <blockquote><div class="quote-text">Một trong những cuộc gọi đầu tiên của tôi sau khi được ký hợp đồng là gọi cho Alex Ferguson. Chúng tôi đã nói rất nhiều thứ từ công việc cho đến chuyện riêng tư, nhưng ở đây tôi xin phép không thảo luận về những nội dung đã nói.</div>
              <div class="quote-name">HLV Solskjaer</div>
               </blockquote>  --}}

            {{{article.content}}}
            <div class="mt-30">
              <i class="material-icons" id="icon-center">label</i>
              {{#each article.arrayOfTags}}
              <a href="/list-articles/tag/{{_id}}" class="badge badge-dark">#{{tagName}}</a>
              {{/each}}
            </div>

          </div>
          {{/if}}

          <div class="social_link">
            <ul class="sociallink_nav">
              <li><a href="javascript:;"><i class="fab fa-facebook-f"></i></a></li>
              <li><a href="javascript:;"><i class="fab fa-twitter"></i></a></li>
              <li><a href="javascript:;"><i class="fab fa-google"></i></a></li>
              <li><a href="javascript:;"><i class="fab fa-linkedin"></i></a></li>
              <li><a href="javascript:;"><i class="fab fa-pinterest"></i></a></li>
            </ul>
          </div>

          <div class="related_post">
            <div class="border-bottom">
              <h2>Bài viết gần đây
                <!--<i class="fa fa-thumbs-o-up"></i>-->
              </h2>
            </div>
            <ul class="spost_nav wow fadeInDown animated">
              {{#each top3Newest}}
              <li>
                <div class="media">
                  <center><a class="media resize-img" href="/single-page/{{_id}}"> <img src="{{bigAvatar}}" alt=""> </a>
                  </center>
                  {{!-- <div class="media-body"> <br>
                <i class="material-icons md-medium">today</i>
                <span class="" title="" data-second="">
                  {{formatDate writeDate day="numeric" month="long" year="numeric"}} </span> </div> --}}
                  <br>
                  <a class="catg_title" href="/single-page/{{_id}}"> {{title}}</a>
                </div>
              </li>
              {{/each}}
            </ul>
          </div>

          <h2 class="page-header">Ý kiến bạn đọc ({{article.comments.length}})</h2>
          <section class="comment-list">
            <!-- First Comment -->
            <span id="idcomment"></span>
            {{#each article.comments}}
