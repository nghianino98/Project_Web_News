      <aside class="right_content">
        <br>
        <div class="single_sidebar">
          <h2><span>Tin hot</span></h2>
          <ul class="spost_nav">
            {{#each top5Articles}}
            <li>
              <div class="media-new">
                <a href="/single-page/{{_id}}" class="media-left"> <img alt="" src="{{bigAvatar}}"> </a>
                <div class="media-body-new">
                  <div class="title-mini">
                    <a href="/single-page/{{_id}}" class="catg_title"> <strong>{{title}}</strong></a>
                  </div>
                  <div>
                    <i class="fas fa-eye"></i> {{views}} lượt xem
                  </div>
                </div>
              </div>
            </li>
            {{/each}}
          </ul>
        </div>
        <br>
        <div class="single_sidebar">
          <h2><span>Cùng chuyên mục</span></h2>
          <ul class="spost_nav">
            {{#each listArtCate}}
            <li>
              <div class="media-new"> <a href="/single-page/{{_id}}" class="media-left"> <img alt=""
                    src="{{bigAvatar}}"> </a>
