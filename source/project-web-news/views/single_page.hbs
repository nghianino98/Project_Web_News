                <div class="panel panel-default arrow left">
                  <div class="panel-body">
                    <header class="text-left">
                      <div class="comment-user"><i class="fa fa-user"></i> <strong>{{nameUser}}</strong></div>
                      <time class="comment-date"
                        datetime="{{formatDate commentDate day="numeric" month="long" year="numeric"}}"><i
                          class="fa fa-clock-o"></i>
                        {{formatDate commentDate day="numeric" month="long" year="numeric"}}</time>
                    </header>
                    <div class="comment-post">
                      {{content}}
                    </div>
                    {{!-- <p class="text-right"><a href="#" class="btn btn-default btn-sm"><i class="fa fa-reply"></i> reply</a></p> --}}
