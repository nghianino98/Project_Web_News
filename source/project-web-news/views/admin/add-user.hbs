<div class="container-fluid">
    <div class="col-md-10 offset-md-1">
        <div class="card" style="min-width: 44rem;">
            {{# if hasError }}
                <div class="alert alert-danger" role="alert">
                    {{# each messages }}
                        {{ this }}</br>
                    {{/ each }}
                </div>
            {{ else }}
                {{# if hasSuccess }}
                    <div class="alert alert-success" role="alert">
                    {{# each success }}
                        {{ this }}</br>
                    {{/ each }}
                </div>
                {{/ if }}
            {{/ if }}
            <div class="card-header bg-primary">
                <h4>{{titleForm}}</h4>
            </div>
            <div class="card-body">
                <form action="/user/admin/manager-user/add-user" method="POST" onsubmit="return validateAddUserForm();">
                    <div class="form-group">
                        <label for="name">Tài khoản</label>   
                        <input id="account" name="account" type="text" class="form-control" placeholder="" autofocus required>
                    </div> <!-- form-group end.// -->
                    <div class="form-group" hidden>
                        <label for="name">Họ và tên</label>   
                        <input id="name" name="name" type="text" class="form-control" value="anonymous">
                    </div> <!-- form-group end.// -->
                    <div class="form-group" hidden>
                        <label for="txtPhone">Số điện thoại</label>   
                        <input id="txtPhone" type="text" class="form-control" placeholder="" onkeypress="return isNumerKey(event)">
                    </div> <!-- form-group end.// -->
                    <div class="form-group" hidden>
                        <label>Ngày sinh</label><br/>  
                        <div class="row">
                            <div class="col-md-3 col-sm-3">
                                <select class="form-control" name="day" id="days">
                                    <option value="1" selected>1</option>
                                </select>
                            </div>
                            <div class="col-md-4 col-sm-4">
                                <select class="form-control" name="month" id="months">
                                    <option value="1" selected>1</option>
                                </select>
                            </div>
                            <div class="col-md-5 col-sm-5">
                                <select class="form-control" name="year" id="years">
                                    <option value="2000" selected>200</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-group" hidden>
                        <label for="email">Địa chỉ email</label>
                        <input id="email" type="email" name="email" value="test@test.com" class="form-control" placeholder="">
                        <small class="form-text text-muted">Chúng tôi sẽ không tiết lộ email của bạn cho người khác.</small>
                    </div> <!-- form-group end.// -->
                    <div class="form-group" hidden>
                        <label class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="gender" value="true" checked>
                            <span class="form-check-label"> Nam </span>
                        </label>
                        <label class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="gender" value="false">
                            <span class="form-check-label"> Nữ </span>
                        </label>
                    </div> <!-- form-group end.// -->
                    <div class="form-group">
                        <label for="newPassword">Mật khẩu</label>
                        <input id="newPassword" name="password" class="form-control" type="password" required>
                    </div> <!-- form-group end.// -->  
                    <div class="form-group">
                        <label for="retype">Nhập lại mật khẩu</label>
                        <input id="retype" class="form-control" type="password" required>
                    </div> <!-- form-group end.// -->  
                    <div class="form-group">
                        <label for="name">Vai trò</label>
                        <select name="role" id="role" class="form-control">
                            <option value="subscriber" selected>subscriber</option>
                            <option value="writer">writer</option>
                            <option value="editor">editor</option>
                            <option value="admin">admin</option>
                        </select>
                    </div> <!-- form-group end.// -->
                    <input type="text" id="_csrf" name="_csrf" value="{{csrfToken}}" hidden>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">tạo</button>
                    </div> <!-- form-group// -->                                     
                </form>
            </div>
        </div>
    </div>
</div>

<script src="/assets/js/manager-user.js"></script>