<div class="container-fluid">
  <div class="card" style="min-width: 44rem;">
    <div class="card-body">
      <div class="row">
        <div class="col-md-3 border-right">
          <h4><i class="fas fa-users"></i> Danh sách users</h4>
        </div>
        <div class="col">
          <button type="button" class="btn btn-sm btn-primary">Thêm user <i class="fas fa-user-plus"></i></button>
        </div>
      </div>
      <!-- filter -->
      <div class="row align-items-center justify-content-center">
        <div class="col pt-3">
          <div class="form-group">
            <select id="categories" class="form-control">
              <option selected>Loại user</option>
              <option>Độc giả</option>
              <option>Writer</option>
              <option>Editor</option>
              <option>Administrator</option>
            </select>
          </div>
        </div>
        <div class="col pt-3">
          <div class="form-group">
            <select id="categories" class="form-control">
              <option selected>Chuyên mục</option>
              <option>Thể thao</option>
              <option>Chính trị</option>
              <option>Xã hội</option>
              <option>Công nghệ</option>
            </select>
          </div>
        </div>
        <div class="col pt-3">
          <div class="form-group">
            <select id="tasg" class="form-control">
              <option selected>Tình trạng</option>
              <option>Hết hạn</option>
              <option>Bị chặn</option>
            </select>
          </div>
        </div>
        <div class="col-md-3">
          <button type="button" class="btn btn-primary btn-block"><i class="fas fa-filter"></i> Lọc</button>
        </div>
      </div> <!-- end filter-->
      <!-- list posts -->
      <div class="row">
        <div class="col-md-12">
          <table class="table table-hover ">
            <thead class="bg-light ">
              <tr>
                {{!-- <th>
                  <div class="form-check-inline">
                    <label class="form-check-label">
                      <input type="checkbox" class="form-check-input" value="">
                    </label>
                  </div>
                </th> --}}
                <th>Avatar</th>
                <th>Tên người dùng</th>
                <th>Loại người dùng</th>
                <th>Quản lý</th>
                <!-- <th>Thời hạn</th> -->
                <th>Trạng thái</th>
                <th>Thao tác</th>
              </tr>
            </thead>
            <tbody>
              {{#each userList}}
              <tr>
                {{!-- <td>
                  <div class="form-check-inline">
                    <label class="form-check-label">
                      <input type="checkbox" class="form-check-input" value="">
                    </label>
                  </div>
                </td> --}}
                <td>
                  <a href="#"><img class="avatar" src="{{avatar}}" alt="Avatar"></a>
                </td>
                <td><small>{{userName}}</small></td>
                <td>
                  <select class="custom-select custom-select-sm" disabled>
                    <option> {{role}} </option>
                  </select>
                </td>
                <td>
                  <select class="custom-select custom-select-sm" disabled>
                    <option selected>Chuyên mục</option>
                    <option value="1">Thể thao</option>
                    <option value="2">Chính trị</option>
                    <option value="3">Xã hội</option>
                    <option value="4">Công nghệ</option>
                  </select>
                </td>
                <td> <i class="fa fa-user-clock"></i> {{status}} </td>
                <td>
                  <a href="/user/admin/manager-user/profile/{{this._id}}"><i class="fa fa-eye" title="Xem thông tin chi tiết"></i></a>
                  <a href="#"><i class="fa fa-calendar-plus" title="Gia hạn"></i></a>
                  <a href="#"><i class="fa fa-trash" title="Xóa bài viết"></i></a>
                </td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>