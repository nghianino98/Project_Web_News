<div class="container-fluid">
    <div class="col-md-10 offset-md-1">
        <div class="card">
            <div class="card-header bg-primary">
                <h4>{{titleForm}}</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                         <img alt="User Pic" src="{{avatar}}" class="img-thumbnail">
                    </div>
                    <div class="col-md-8">
                         <div class="form-group row" ondblclick="onDoubleClickEmail()">
                            <label for="name" class="col-md-3 m-1 align-self-center" ><strong>Tên</strong></label>
                            <input type="text" name="name" id="name" value="{{user.userName}}" readonly class="form-control col align-self-center">
                        </div>
                        {{# if isWriter}}
                            <div class="form-group row" ondblclick="onDoubleClickEmail()">
                                <label for="pseudonym" class="col-md-3 m-1 align-self-center" ><strong>Bút danh</strong></label>
                                <input type="text" name="pseudonym" id="pseudonym" value="{{user.pseudonym}}" readonly class="form-control col align-self-center">
                            </div>
                        {{/if}}
                        <div class="form-group row">
                            <label for="email" class="col-md-3 m-1 align-self-center" ><strong>Email</strong></label>
                            <input type="text" name="email" id="email" value="{{user.email}}" readonly class="form-control col align-self-center">
                        </div>
                        <div class="form-group row">
                            <label for="role" class="col-md-3 m-1 align-items-center" ><strong>Vai trò</strong></label>
                            <input type="text" name="role" id="role" value="{{user.role}}" readonly class="form-control col align-self-center">
                        </div>
                        <div class="form-group row">
                            <label class="col-md-3 m-1 align-items-center" ><strong>Ngày sinh</strong></label>
                            <div class="col">
                                <select class="form-control" name="day" id="days">
                                    <option>{{user.date}}</option>
                                </select>
                            </div>
                            <div class="col">
                                <select class="form-control" name="month" id="months" >
                                    <option>{{user.month}}</option>
                                </select>
                            </div>
                            <div class="col">
                                <select class="form-control" name="year" id="{years}"  >
                                    <option>{{user.year}}</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="phoneNumber" class="col-md-3 m-1 align-items-center" ><strong>Điện thoại</strong></label>
                            <input type="text" name="phoneNumber" id="phoneNumber" value="{{user.phoneNumber}}" readonly class="form-control col align-self-center">
                        </div>
                    </div>
                </div>
               <button class="btn btn-primary float-right" onclick="handleUpdateInfo()">Cập nhật</button>
            </div>
        </div>
    </div>
</div>

<script src="/assets/js/profile-admin.js"></script>